<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.AlertService.Controls.CustomAlertPopup"
    x:Name="RootPopup"
    Size="300, Auto"
    BackgroundColor="Black">

    <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center">

        <!-- FontAwesome Icon Label -->
        <Label x:Name="IconLabel"
               FontFamily="FontAwesomeSolid"
               FontSize="60"
               TextColor="#FFD700"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               IsVisible="False" />

        <Label x:Name="TitleLabel"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center" />

        <Label x:Name="MessageLabel"
               TextColor="White"
               HorizontalOptions="Center"
               HorizontalTextAlignment="Center" />

        <HorizontalStackLayout x:Name="ButtonLayout"
                               Spacing="10"
                               HorizontalOptions="Center">
            <Button x:Name="LeftButton" IsVisible="False" />
            <Button x:Name="MiddleButton" IsVisible="False" />
            <Button x:Name="RightButton" IsVisible="False" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
